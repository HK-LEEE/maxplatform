# MAX Platform Production 환경 설정
# 운영 환경용 설정 파일 (실제 값으로 교체 필요)

# =================
# 공통 설정
# =================
MAX_PLATFORM_ENVIRONMENT=production

# =================
# Backend 설정
# =================
MAX_PLATFORM_HOST=0.0.0.0
MAX_PLATFORM_PORT=443
MAX_PLATFORM_API_URL=https://max.dwchem.co.kr

# Frontend URL (OAuth 리다이렉트용)
MAX_PLATFORM_FRONTEND_URL=https://max.dwchem.co.kr

# =================
# Frontend 설정 (React)
# =================
REACT_APP_ENVIRONMENT=production
REACT_APP_API_BASE_URL=https://max.dwchem.co.kr
REACT_APP_FRONTEND_URL=https://max.dwchem.co.kr
REACT_APP_DEBUG_MODE=false
REACT_APP_API_TIMEOUT=30000

# =================
# MAX Platform 서비스 URL (Production)
# =================


# MAX Lab
MAX_LAB_URL=https://maxlab.dwchem.co.kr
MAX_LAB_CALLBACK_URL=https://maxlab.dwchem.co.kr/oauth/callback
REACT_APP_MAX_LAB_URL=https://maxlab.dwchem.co.kr


# =================
# 외부 서비스 URL
# =================
OLLAMA_BASE_URL=https://ollama.dwchem.co.kr:11434
JUPYTER_BASE_URL=https://jupyter.dwchem.co.kr
REACT_APP_OLLAMA_BASE_URL=https://ollama.dwchem.co.kr:11434
REACT_APP_JUPYTER_BASE_URL=https://jupyter.dwchem.co.kr

# =================
# OAuth 설정
# =================
REACT_APP_OAUTH_CLIENT_ID=maxplatform-frontend
REACT_APP_OAUTH_SCOPE=read:profile read:groups read:features

# =================
# 데이터베이스 설정 (Production - 실제 값으로 교체 필요)
# =================
DATABASE_TYPE=postgresql
DATABASE_URL=postgresql://username:password@db.dwchem.co.kr:5432/platform_production

# JWT 설정 (Production - 강력한 시크릿 키 사용)
SECRET_KEY=CHANGE_THIS_TO_STRONG_SECRET_KEY_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =================
# LLM 설정
# =================
DEFAULT_LLM_PROVIDER=azure
OLLAMA_DEFAULT_MODEL=llama3.2
MAX_TOKENS=4000
TEMPERATURE=0.1

# Azure OpenAI 설정 (Production)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=YOUR_PRODUCTION_API_KEY
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# ChromaDB 설정
CHROMA_PORT=8003

# =================
# 보안 설정
# =================
# CORS 설정
CORS_ORIGINS=https://platform.dwchem.co.kr,https://flowstudio.dwchem.co.kr,https://teamsync.dwchem.co.kr,https://lab.dwchem.co.kr,https://workspace.dwchem.co.kr,https://apa.dwchem.co.kr,https://mlops.dwchem.co.kr,https://queryhub.dwchem.co.kr,https://llm.dwchem.co.kr

# SSL/TLS 설정
USE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/maxplatform.crt
SSL_KEY_PATH=/etc/ssl/private/maxplatform.key

# =================
# 로깅 설정
# =================
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/maxplatform/app.log
ENABLE_ACCESS_LOG=true