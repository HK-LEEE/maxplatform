# MAX Platform Frontend Environment Configuration Template
# Copy this file to .env.development or .env.production and fill in your actual values

# =================
# Environment Configuration
# =================
# Environment: development, staging, or production
VITE_ENVIRONMENT=development

# =================
# API Configuration
# =================
# Backend API Base URL
VITE_API_BASE_URL=http://localhost:8000

# Frontend URL (for OAuth redirects)
VITE_FRONTEND_URL=http://localhost:3000

# =================
# MAX Platform Service URLs
# =================
# MAX FlowStudio
VITE_MAX_FLOWSTUDIO_URL=http://localhost:3005

# MAX TeamSync
VITE_MAX_TEAMSYNC_URL=http://localhost:3015

# MAX Lab
VITE_MAX_LAB_URL=http://localhost:3010

# MAX Workspace
VITE_MAX_WORKSPACE_URL=http://localhost:3020

# MAX APA
VITE_MAX_APA_URL=http://localhost:3035

# MAX MLOps
VITE_MAX_MLOPS_URL=http://localhost:3040

# MAX QueryHub
VITE_MAX_QUERYHUB_URL=http://localhost:3025

# MAX LLM
VITE_MAX_LLM_URL=http://localhost:3030

# =================
# External Service URLs
# =================
# Ollama Base URL
VITE_OLLAMA_BASE_URL=http://localhost:11434

# Jupyter Base URL
VITE_JUPYTER_BASE_URL=http://localhost

# =================
# OAuth Configuration
# =================
# OAuth Client ID
VITE_OAUTH_CLIENT_ID=maxplatform-frontend

# OAuth Scope
VITE_OAUTH_SCOPE=read:profile read:groups read:features

# =================
# Application Settings
# =================
# Debug Mode (true for development, false for production)
VITE_DEBUG_MODE=true

# API Request Timeout (milliseconds)
VITE_API_TIMEOUT=30000

